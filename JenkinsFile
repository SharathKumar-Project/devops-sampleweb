pipeline {
    agent { label "worker_node" } 

    stages {
        stage ('Checkout') {
            steps {
                checkout ([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                       url: 'https://github.com/SharathKumar-Project/devops-sampleweb.git',
                       credentialsId: 'github_token'
                    ]]
                ])
            }
        }

        stage ('Build') {
            step {
                sh 'mvn clean install'
            }
        }

        stage  ('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage ('Depoly to Artifactory'){
            steps {
                configFileProvider([configFile(fileId: 'a68e0985-2493-47b2-bb91-7ed3c1b32990', variable: 'MAVEN_SETTINGS'
                )]) {
                    sh 'mvn deploy -s $MAVEN_SETTINGS'
                }
            }
        }

        stage ('Download and Deploy war to tomcat locally'){
            steps {
                echo 'downloading war from Artifact and checking if tomact is reunning if yes stoping....and copying war to tomcat server....restart tomcat service'
            }
        }
    }
} 